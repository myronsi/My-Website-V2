name: Deploy React Vite to Hostinger

on:
  push:
    branches: [main]

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'  # Matches recommended engines

      - name: Install dependencies
        run: npm ci  # Clean install, respects package-lock.json

      - name: Build project
        run: npm run build  # Generates dist folder

      - name: List build output
        run: ls -la dist  # Debug: Verify dist contents

      - name: Deploy build to branch
        run: |
          git config --global user.name 'github-actions[bot]'
          git config --global user.email 'github-actions[bot]@users.noreply.github.com'
          git checkout -b deploy || git checkout deploy  # Create or switch
          git rm -rf --ignore-unmatch .  # Clear branch
          mv dist/* .  # Move dist contents to root
          rm -rf dist  # Remove empty dist folder
          git add .
          git diff --staged --quiet || git commit -m "Deploy build $(date '+%Y-%m-%d %H:%M:%S')"
          git push origin deploy -f

      - name: Trigger Hostinger deploy
        run: curl -X POST ${{ secrets.HOSTINGER_WEBHOOK_URL }}
